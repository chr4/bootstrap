#!/bin/bash
#
# This is an example configuration file, used by the *.sh scripts
# Copy this to config.sh, and adapt

# Configure Chef server
DOMAIN="example.com"
ORGANIZATION="myorganization"
CHEF_SERVER="https://chef.$DOMAIN/organizations/$ORGANIZATION"
SSL_VERIFY_MODE="verify_peer"

# Get URL and SHA1 of chef-client package from https://downloads.chef.io/chef-client/
CHEF_VERSION="12.9.41-1"
CHEF_CLIENT_PACKAGE="https://packages.chef.io/stable/ubuntu/10.04/chef_${CHEF_VERSION}_amd64.deb"
CHEF_CLIENT_SHA1="7fa9fec0ea5d3b6de8bfaed8798a77f3fab2f2a3"
